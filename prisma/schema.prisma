generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  STAFF
}

enum LogType {
  SYSTEM
  USER
}

enum VoteType {
  UPVOTE
  DOWNVOTE
} 

model Knowledge {
  id        String     @id @default(cuid())
  keywords  String[]
  answer    String     @db.Text
  category  String
  votes     ChatVote[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("knowledges")
}

model MissingAnswer {
  id        String   @id @default(uuid())
  question  String
  createdAt DateTime @default(now())

  @@map("missing_answers")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  username  String   @unique
  password  String
  role      UserRole @default(STAFF)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  activityLogs ActivityLog[]

  @@map("users")
}

model ActivityLog {
  id          String   @id @default(uuid())
  action      String
  description String
  ipAddress   String?
  type        LogType  @default(SYSTEM)
  createdAt   DateTime @default(now())

  userId    String?
  user      User?   @relation(fields: [userId], references: [id])

  @@map("activity_logs")
}

model ChatVote {
  id          String    @id @default(cuid())
  question    String    @db.Text
  knowledgeId String
  knowledge   Knowledge @relation(fields: [knowledgeId], references: [id], onDelete: Cascade)
  vote        VoteType
  feedback    String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([knowledgeId])
  @@index([vote])
  @@index([createdAt])

  @@map("chat_votes")
}
